<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="brand">
        <column xsi:type="int" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
        <column xsi:type="varchar" name="title" nullable="false" length="20" comment="Title" />
        <column xsi:type="varchar" name="content" nullable="false" length="255" comment="Content" />
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>
